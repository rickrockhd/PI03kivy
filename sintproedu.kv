            pos_hint: {'center_x': .1, 'center_y': .05}
            on_release: app.root.current = 'telabemvindo'


<ContentNavigationDrawer>

    ScrollView:

        MDList:

            OneLineListItem:
                text: "HOME"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "home"

            OneLineListItem:
                text: "ALUNO"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 2"

            OneLineListItem:
                text: "EMPRESA"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "scr 3"


<TelaBemVindo>:

    name:"telabemvindo"

    MDScreen:

        MDTopAppBar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 10
            title: "Menu Principal"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationLayout:
            x: toolbar.height

            MDScreenManager:
                id: screen_manager

                MDScreen:
                    name: "home"

                    MDLabel:
                        text: "home"
                        halign: "center"

                    FloatLayout:

                        Image:
                            source:'7.png'
                            size_hint: .99, .99
                            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
                            allow_stretch: True

                        Image:
                            source:'logo_transparente.png'
                            size_hint: 0.8, 0.8
                            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                            allow_stretch: True

                        MDTextButton:
                            pos_hint:  { 'center_x': .50, 'center_y': .10}
                            text: 'Comece o seu projeto agora, clicando aqui!'
                            font_size: 15
                            on_release: app.root.current = 'telaprojetos'

                MDScreen:
                    name: "scr 2"

                    FloatLayout:
                        ScrollView:

                            MDList:

                                OneLineAvatarIconListItem:
                                    on_release: print("Click!")

                                    IconLeftWidget:
                                        icon: "account-school"

                                OneLineAvatarIconListItem:
                                    on_release: print("Click 2!")

                                    IconLeftWidget:
                                        icon: "account-school"

                                ThreeLineAvatarListItem:
                                    on_release: print("Click 2!")

                                    text: "Three-line item with avatar"
                                    secondary_text: "Secondary text here"
                                    tertiary_text: "fit more text than usual"

                                    ImageLeftWidget:
                                        icon: "account-school"
                MDScreen:
                    name: "scr 3"

                    ScrollView:

                        MDList:

                            OneLineAvatarIconListItem:
                                on_release: print("Click!")

                                IconLeftWidget:
                                    icon: "account-school"

                            OneLineAvatarIconListItem:
                                on_release: print("Click 2!")

                                IconLeftWidget:
                                    icon: "account-school"

                            ThreeLineAvatarListItem:
                                on_release: print("Click 2!")

                                text: "João Silva Ferreira"
                                secondary_text: "Engenharia da Computação"
                                tertiary_text: "Conhecimento em Python e Ruby"

                                ImageLeftWidget:
                                    icon: "account-school"

            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer
